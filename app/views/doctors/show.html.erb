<h1>Doctor Show Page</h1>

<h3>Name: <%= @doctor.name %></h3>
<p>Specialty: <%= @doctor.specialty %></p>
<p>University: <%= @doctor.university %></p>

<h3>Hospital: <%= @hospital.name %></h3>

<h3>Patients: </h3>

<% @patients.each do |patient| %>
  <section id="patient-<%= patient.id %>">
    <p><%= patient.name %></p>
    <%= button_to "Remove Patient", "/patient_doctors", method: :delete, params: {doctor_id: @doctor.id, patient_id: patient.id} %>
  </section>
<% end %>
